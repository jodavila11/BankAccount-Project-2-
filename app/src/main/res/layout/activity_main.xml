<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_mainDisplay"
        android:layout_width="359dp"
        android:layout_height="126dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Bank Account"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_confirmButton"
        android:layout_width="118dp"
        android:layout_height="131dp"
        android:layout_marginBottom="224dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_balance"
        android:layout_width="213dp"
        android:layout_height="102dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="184dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_mainDisplay" />

    <EditText
        android:id="@+id/editText_Deposit"
        android:layout_width="210dp"
        android:layout_height="105dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Deposit"
        app:layout_constraintEnd_toStartOf="@+id/button_confirmButton"
        app:layout_constraintTop_toBottomOf="@+id/editText_balance" />

    <EditText
        android:id="@+id/editText_Withdrawl"
        android:layout_width="210dp"
        android:layout_height="112dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="184dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Withdrawal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Deposit" />

    <Button
        android:id="@+id/switchUserButton"
        android:layout_width="125dp"
        android:layout_height="116dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="48dp"
        android:text="User"
        app:layout_constraintStart_toStartOf="@+id/editText_Withdrawl"
        app:layout_constraintTop_toBottomOf="@+id/button_confirmButton" />

    <Button
        android:id="@+id/admin_button"
        android:layout_width="122dp"
        android:layout_height="95dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="48dp"
        android:text="Admin"
        app:layout_constraintBottom_toTopOf="@+id/button_confirmButton"
        app:layout_constraintStart_toEndOf="@+id/editText_balance" />

</androidx.constraintlayout.widget.ConstraintLayout>